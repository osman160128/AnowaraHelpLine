<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".blood.BloodDonerProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#F07334E8"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/blodDonerProfileImg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="-30dp"
            android:padding="15dp"
            android:background="@drawable/stoke"
            >
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/profile_icon"

                />
            <TextView
                android:id="@+id/blodDonerProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Loading"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@id/profile_icon"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/blodDonerProfileName"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/blood_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/blood_icon"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/blodDonerprofileBLoodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Loading"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@id/blood_icon"
                android:layout_below="@+id/view1"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/blodDonerprofileBLoodGroup"
                />


            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/phone_icon"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/view3"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:id="@+id/blodDonerprofilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Loading"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@id/phone_icon"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/view3"/>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/phone_icon"
                />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/email_icon"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/view4"
                />
            <TextView

                android:id="@+id/blodDonerprofileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Loading"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@id/email_icon"
                android:layout_below="@+id/view4"/>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/email_icon"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>



    </LinearLayout>
</ScrollView>