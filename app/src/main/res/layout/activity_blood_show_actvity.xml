<?xml version="1.0" encoding="utf-8"?>
 <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".blood.BloodShowActvity"
    android:background="#EDE1E1"
    tools:openDrawer="start"
    android:id="@+id/bloodDonerDrawerLayout">

       <androidx.coordinatorlayout.widget.CoordinatorLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
              <com.google.android.material.appbar.AppBarLayout
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:background="#EDE1E1"
                  >
                   <com.google.android.material.appbar.MaterialToolbar
                       android:id="@+id/bloodDonerToolBarLayout"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       app:navigationIcon="@drawable/menu"

                       />


              </com.google.android.material.appbar.AppBarLayout>
              <FrameLayout
                  android:id="@+id/bloodDonerFrameLyout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginTop="60dp"
                  tools:ignore="InvalidId" />

       </androidx.coordinatorlayout.widget.CoordinatorLayout>

       <com.google.android.material.navigation.NavigationView
           android:id="@+id/bloodDonerNavigationView"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="start"
           app:headerLayout="@layout/blood_doner_details_header"
           app:menu="@menu/menu_item"
           tools:ignore="InvalidId" />




</androidx.drawerlayout.widget.DrawerLayout>