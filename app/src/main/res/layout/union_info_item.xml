<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">

        <TextView
            android:id="@+id/union_memeber_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Union member name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/union_memeber_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="post"
            android:textSize="15dp"
            android:textAlignment="center"

            />
        <TextView
                android:id="@+id/union_memeber_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textSize="15dp"
                android:textAlignment="center"
            />


        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/union_memeber_call_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:lottie_url="https://assets3.lottiefiles.com/private_files/lf30_vpbcbwwm.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:transitionName="lottieBloodActivityAnimation"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>