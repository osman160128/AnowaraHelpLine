<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="12dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bloodDonerShowItemImg"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        />

       <TextView
           android:id="@+id/bloodDonerShowItemName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="3dp"
           android:layout_marginTop="3dp"
           android:layout_marginEnd="3dp"
           android:layout_marginBottom="3dp"
           android:layout_toRightOf="@+id/bloodDonerShowItemImg"
           android:ellipsize="end"
           android:maxLines="1"
           android:paddingLeft="12dp"
           android:paddingTop="5dp"
           android:paddingRight="5dp"

           android:paddingBottom="5dp"
           android:text="Name"
           android:textColor="@color/black"
           android:textSize="25sp" />

       <TextView
           android:id="@+id/bloodDonerShowItemBLoodGroup"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_below="@+id/bloodDonerShowItemName"
           android:layout_marginStart="3dp"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="3dp"
           android:layout_marginBottom="3dp"
           android:layout_toRightOf="@+id/bloodDonerShowItemImg"
           android:paddingLeft="12dp"
           android:paddingTop="3dp"
           android:paddingRight="3dp"
           android:paddingBottom="5dp"
           android:text="B+"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textSize="20dp" />

       <ImageView
           android:id="@+id/bloodDonerShowItemPhoneLogo"
           android:layout_width="37dp"
           android:layout_height="37dp"
           android:src="@drawable/phone_icon"
           android:padding="5dp"
           android:scaleType="fitXY"
           android:layout_marginTop="5dp"
           android:layout_below="@+id/bloodDonerShowItemName"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@id/bloodDonerShowItemBLoodGroup"
           />

       <ImageView
           android:id="@+id/bloodDonerShowItemMassage"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/chat_logo"
           android:layout_marginTop="5dp"
           android:layout_below="@+id/bloodDonerShowItemName"
           android:layout_toRightOf="@id/bloodDonerShowItemPhoneLogo"
           android:layout_marginLeft="20dp"
           />

   </RelativeLayout>
    </androidx.cardview.widget.CardView>