<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardMaxElevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/call_ambulance">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ambulanceListViewImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/phonelogo"
            android:layout_marginRight="5dp"
            android:background="#FD0B0B75"
            />
        <TextView
            android:id="@+id/ambulanceListViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="osman"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ambulanceListViewImage"
            android:padding="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/ambulanceListViewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="osman"
            android:layout_toRightOf="@+id/ambulanceListViewImage"
            android:layout_below="@+id/ambulanceListViewName"
            android:textSize="15dp"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/ambulanceListViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="osman"
            android:layout_toRightOf="@+id/ambulanceListViewImage"
            android:layout_below="@+id/ambulanceListViewPhone"
            android:textSize="15dp"
            android:padding="2dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

