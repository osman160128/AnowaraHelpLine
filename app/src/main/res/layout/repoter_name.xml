<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="13dp"
    android:elevation="13dp"
    app:cardUseCompatPadding="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            >
            <TextView
                android:id="@+id/repooooooName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/repooooooNewsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_below="@+id/repooooooName"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/repooooooPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_below="@+id/repooooooNewsName"
                android:textSize="20sp"
                android:gravity="center"
                />
        </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/repoterNamePhoneLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:lottie_url="https://assets3.lottiefiles.com/private_files/lf30_vpbcbwwm.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:transitionName="lottieBloodActivityAnimation"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20sp"

            />
    </LinearLayout>



</androidx.cardview.widget.CardView>